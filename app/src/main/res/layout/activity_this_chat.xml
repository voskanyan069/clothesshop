<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".messenger.ThisChatActivity">

    <LinearLayout
        android:id="@+id/chat_top_panel"
        android:layout_width="match_parent"
        android:background="@color/colorPurpleLight"
        android:layout_height="60sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_header_back_button"
            android:layout_width="35sp"
            android:layout_height="40sp"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="center_vertical"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_header_user_image"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:src="@drawable/profile_image_placeholder"
            android:padding="5sp"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/chat_header_user_name"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="Username"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_top_panel"
        android:layout_above="@id/message_actions"
        tools:listitem="@layout/message_list_item"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/message_actions"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        >

        <EditText
            android:id="@+id/message_input"
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_toLeftOf="@id/send_message_button"
            android:background="@drawable/message_input_layout"
            android:layout_marginVertical="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:hint="Message..."
            android:paddingHorizontal="10sp"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/send_message_button"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:padding="10sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5sp"
            android:src="@drawable/send_message_icon"
            />

    </RelativeLayout>
</RelativeLayout>