<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10sp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:padding="10sp"
            android:src="@drawable/clothes"
            android:background="@drawable/product_image_layout"
            />

        <ImageView
            android:id="@+id/product_like_image"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/like_border"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30sp"
            android:layout_marginRight="30sp"
            android:layout_below="@id/product_image"
            android:padding="10sp"
            android:orientation="vertical"
            android:background="@drawable/product_text_layout"
            >

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="25sp"
                android:layout_marginLeft="5sp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#504C4C"
                android:text="{{NAME}}"
                />

            <TextView
                android:id="@+id/product_store"
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:layout_marginLeft="3sp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#675A5A"
                android:text="{{STORE}}"
                />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="32sp"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#645A5A"
                android:text="{{DESCRIPTION}}\n{{DESCRIPTION}}\n{{DESCRIPTION}}"
                />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="22sp"
                android:layout_marginTop="5sp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#464343"
                android:text="{{12345Ö}}"
                />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>